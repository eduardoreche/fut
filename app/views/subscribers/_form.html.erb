<%= simple_form_for(@subscriber) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :accept_terms %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
